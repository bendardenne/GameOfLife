<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GameOfLife.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:GameOfLife.Views"
        xmlns:controls="clr-namespace:GameOfLife.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GameOfLife.Views.MainWindow"
        Title="GameOfLife">

    <DockPanel>
        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <controls:BooleanGrid Grid="{Binding Grid }" />
        </ScrollViewer>
        
        <ContentControl DockPanel.Dock="Right" Content="{Binding ControlPanel}"/>
    </DockPanel>
</Window>